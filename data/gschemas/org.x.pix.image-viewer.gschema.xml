<schemalist>

  <schema id="org.x.pix.image-viewer" path="/org/x/pix/image-viewer/" gettext-domain="pix">
    <key name="zoom-quality" enum="org.x.pix.GthZoomQuality">
      <default>'high'</default>
    </key>
    <key name="zoom-change" enum="org.x.pix.GthZoomChange">
      <default>'fit-size-if-larger'</default>
    </key>
    <key name="reset-scrollbars" type="b">
      <default>true</default>
      <description>Whether to reset the scrollbars position after changing image</description>
    </key>
    <key name="histogram-scale" enum="org.x.pix.GthHistogramScale">
      <default>'linear'</default>
    </key>
    <key name="transparency-style" enum="org.x.pix.GthTransparencyStyle">
      <default>'checkered'</default>
    </key>
  </schema>

</schemalist>
